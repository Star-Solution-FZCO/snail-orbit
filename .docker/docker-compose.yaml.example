name: project-manager
services:
  api:
    build:
      context: ..
      dockerfile: Dockerfile
      target: api
    ports:
    - "127.0.0.1:9090:9090"
    volumes:
    - "./etc:/app/etc"
    depends_on:
      mongo:
        condition: service_started
  mongo:
    image: mongo:7.0
    volumes:
      - "./data/mongo:/data/db"
    environment:
      MONGO_INITDB_ROOT_USERNAME: 'test'
      MONGO_INITDB_ROOT_PASSWORD: 'test'
      MONGO_INITDB_DATABASE: 'pm'
